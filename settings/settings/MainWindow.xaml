
<Window x:Class="settings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:settings"
        mc:Ignorable="d"
        Title="settings" Height="500" Width="400" ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Image">
            <Setter Property="Grid.Column" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Stretch" Value="Uniform"/>
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <TabItem Header="JSON">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0">Background Video</Label>
                <CheckBox Grid.Row="0" IsChecked="True" Name="vidbg"/>
                <Image Grid.Row="0" Source="Images/fxbeam.png"/>
                
                <Label Grid.Row="1">Combo Background</Label>
                <CheckBox Grid.Row="1" IsChecked="False" Name="combobg"/>
                <Image Grid.Row="1" Source="Images/fxbeam.png"/>

                <Label Grid.Row="2">Note Beam</Label>
                <CheckBox Grid.Row="2" IsChecked="True" Name="beam"/>
                <Image Grid.Row="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="3">Combo</Label>
                <CheckBox Grid.Row="3" IsChecked="True" Name="combo"/>
                <Image Grid.Row="3" Source="Images/fxbeam.png"/>

                <Label Grid.Row="4">Time Bar</Label>
                <CheckBox Grid.Row="4" IsChecked="True" Name="progressbar"/>
                <Image Grid.Row="4" Source="Images/fxbeam.png"/>

                <Label Grid.Row="5">Accuracy</Label>
                <CheckBox Grid.Row="5" IsChecked="True" Name="accuracy"/>
                <Image Grid.Row="5" Source="Images/fxbeam.png"/>
                
                <Label Grid.Row="6">Hit Grade</Label>
                <CheckBox Grid.Row="6" IsChecked="True" Name="timegate"/>
                <Image Grid.Row="6" Source="Images/fxbeam.png"/>

                <Label Grid.Row="7">Key Light</Label>
                <CheckBox Grid.Row="7" IsChecked="True" Name="keypressed"/>
                <Image Grid.Row="7" Source="Images/fxbeam.png"/>

                <Label Grid.Row="8">Particles</Label>
                <CheckBox Grid.Row="8" IsChecked="True" Name="particles"/>
                <Image Grid.Row="8" Source="Images/fxbeam.png"/>

                <StackPanel Grid.Row="9" Grid.ColumnSpan="3">
                    <Button Click="GenerateJSON">Generate JSON</Button>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Debug">
            <TextBox TextWrapping="Wrap" Name="debug" />
        </TabItem>
    </TabControl>
</Window>
