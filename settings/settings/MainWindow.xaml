
<Window x:Class="settings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:settings"
        mc:Ignorable="d"
        Title="settings" Height="500" Width="400" ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Image">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Stretch" Value="Uniform"/>
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <TabItem Header="JSON">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Background Video</Label>
                <CheckBox Grid.Row="0" Grid.Column="1" Name="novidbg"/>
                <Image Grid.Row="0" Grid.Column="2" Source="Images/fxbeam.png"/>
                
                <Label Grid.Row="1" Grid.Column="0">Combo Background</Label>
                <CheckBox Grid.Row="1" Grid.Column="1" Name="combobg"/>
                <Image Grid.Row="1" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="2" Grid.Column="0">Note Beam</Label>
                <CheckBox Grid.Row="2" Grid.Column="1" Name="beam"/>
                <Image Grid.Row="2" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="3" Grid.Column="0">Measure Line</Label>
                <CheckBox Grid.Row="3" Grid.Column="1" Name="measure"/>
                <Image Grid.Row="3" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="4" Grid.Column="0">Combo</Label>
                <CheckBox Grid.Row="4" Grid.Column="1" Name="combo"/>
                <Image Grid.Row="4" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="5" Grid.Column="0">Time Bar</Label>
                <CheckBox Grid.Row="5" Grid.Column="1" Name="progressbar"/>
                <Image Grid.Row="5" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="6" Grid.Column="0">Accuracy</Label>
                <CheckBox Grid.Row="6" Grid.Column="1" Name="accuracy"/>
                <Image Grid.Row="6" Grid.Column="2" Source="Images/fxbeam.png"/>
                
                <Label Grid.Row="7" Grid.Column="0">Hit Grade</Label>
                <CheckBox Grid.Row="7" Grid.Column="1" Name="timegate"/>
                <Image Grid.Row="7" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="8" Grid.Column="0">Key Light</Label>
                <CheckBox Grid.Row="8" Grid.Column="1" Name="keypressed"/>
                <Image Grid.Row="8" Grid.Column="2" Source="Images/fxbeam.png"/>

                <Label Grid.Row="9" Grid.Column="0">Particles</Label>
                <CheckBox Grid.Row="9" Grid.Column="1" Name="particles"/>
                <Image Grid.Row="9" Grid.Column="2" Source="Images/fxbeam.png"/>

                <StackPanel Grid.Row="10" Grid.ColumnSpan="3">
                    <Button Click="GenerateJSON">Generate JSON</Button>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Debug">
            <TextBox TextWrapping="Wrap" Name="debug" />
        </TabItem>
    </TabControl>
</Window>
